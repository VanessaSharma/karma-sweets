{{#if updateReviewForm}}
<div class="well">
  <h2>Update Review</h2>
  <form>
    <div class="form-group">
      <label for="customer">Name</label>
      {{input value=customer id="customer" placeholder=review.customer}}
    </div>
    <div class="form-group">
      <label for="rating">Rating</label>
      {{input value=rating id="rating" placeholder=review.rating}}
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      {{input value=content id="content" placeholder=review.content}}
    </div>
    <button {{action 'update' review}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'updateReviewForm'}}>Update</button>
{{/if}}
