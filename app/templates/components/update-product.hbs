{{#if updateProductForm}}
<h3>Update Product</h3>
<div>
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name" placeholder=product.name}}
    </div>

    <div class="form-group">
      <label for="type">Type</label>
      {{input value=type id="type" placeholder=product.type}}
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      {{input value=description id="description" placeholder=product.description}}
    </div>

    <div class="form-group">
      <label for="shopName">Your Business Name</label>
      {{input value=shopName id="shopName"}}
    </div>

    <div class="form-group">
      <label for="specialDiet">Special Diet Tags</label>
      {{input value=specialDiet id="specialDiet" placeholder=product.specialDiet}}
    </div>

    <div class="form-group">
      <label for="price">Price</label>
      {{input value=price id="price" placeholder=product.price}}
    </div>

    <div class="form-group">
      <label for="image">Image</label>
      {{input value=image id="image"}}
    </div>

    <button {{action 'update' product}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'updateProductForm'}}>Update</button>
{{/if}}
